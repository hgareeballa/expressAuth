<%- include('helpers/head') %>

    <div class="container centered-form">
        <div class="col-md-4">
            <h1>Login</h1>
            <%- message %>
                <p>Try accessing <a href="/restricted">/restricted</a>, then authenticate with "tj" and "foobar".</p>
                <form method="post" action="/login">
                    <div class="form-group">
                        <label for="username">Username:</label>
                        <input type="text" class="form-control" value="tj" name="username" id="username">
                    </div>
                    <div class="form-group">
                        <label for="password">Password:</label>
                        <input type="password" class="form-control" value="foobar" name="password" id="password">
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Login</button>
                </form>
        </div>
    </div>


    <style>
        html,
        body {
            height: 100%;
        }

        .centered-form {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>